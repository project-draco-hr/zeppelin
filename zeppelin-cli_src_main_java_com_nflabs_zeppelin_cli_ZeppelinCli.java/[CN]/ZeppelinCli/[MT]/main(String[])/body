{
  Options options=new Options();
  options.addOption(OptionBuilder.withArgName("File").withDescription("Run ZQL in given text file").hasArg(true).create("f"));
  options.addOption(OptionBuilder.withArgName("ZQLStatement").withDescription("Run ZQL statement").hasArg(true).create("e"));
  options.addOption(OptionBuilder.withDescription("See this messages").withLongOpt("help").create("h"));
  CommandLineParser parser=new BasicParser();
  CommandLine cmd=parser.parse(options,args);
  Zengine z=new Zengine();
  if (cmd.hasOption("f")) {
    ZQL zql=new ZQL(z);
    zql.load(new File(cmd.getOptionValue("f")));
    List<Z> zs=zql.compile();
    for (    Z q : zs) {
      q.execute().result().write(System.out);
    }
  }
 else   if (cmd.hasOption("e")) {
    ZQL zql=new ZQL(cmd.getOptionValue("e"),z);
    List<Z> zs=zql.compile();
    for (    Z q : zs) {
      q.execute().result().write(System.out);
    }
  }
 else   if (cmd.hasOption("h")) {
    HelpFormatter formatter=new HelpFormatter();
    formatter.printHelp("ZeppelinCli",options);
  }
 else {
    ZeppelinCli cli=new ZeppelinCli();
    cli.run(z);
  }
}
