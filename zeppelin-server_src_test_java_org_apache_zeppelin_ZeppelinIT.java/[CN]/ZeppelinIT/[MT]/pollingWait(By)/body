{
  Wait<WebDriver> wait=new FluentWait<WebDriver>(driver).withTimeout(MAX_BROWSER_TIMEOUT_SEC,TimeUnit.SECONDS).pollingEvery(1,TimeUnit.SECONDS).ignoring(NoSuchElementException.class);
  return wait.until(new Function<WebDriver,WebElement>(){
    public WebElement apply(    WebDriver driver){
      return driver.findElement(locator);
    }
  }
);
}
